<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--定期维修 定时任务-->
        <record model="ir.cron" id="periodic_maintenance_requests_cron">
            <field name="name">定期维修定时任务</field>
            <field name="model_id" ref="model_periodic_maintenance"/>
            <field name="state">code</field>
            <field name="code">model._cron_generate_requests2()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>
        <record id="tj_maintenance_equipment_view_form_inherit" model="ir.ui.view">
            <field name="name">maintenance.equipment.view.form.inherit.hr</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group[1]" position="replace">
                    <group>
                        <group>
                            <field name="model"/>
                            <field name="serial_no"/>
                            <field name="partner_id" context="{'default_supplier': True, 'default_customer': False}"/>
                            <field name="location" string="使用地点"/>
                            <field name="installation_date"/>
                            <field name="approval_leader"/>
                        </group>
                        <group>
                            <field name="technician_user_id"/>
                            <field name="technical_phones"/>
                            <field name="investment_date"/>
                            <field name="scrap_date"/>
                            <field name="cost"/>
                            <field name="warranty"/>
                        </group>
                    </group>
                </xpath>
                <xpath expr="//sheet/notebook/page[2]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//sheet/notebook/page[3]" position="replace">
                    <page string="定期维护">
                        <field name="periodic_maintenance_ids"/>
                    </page>
                </xpath>
                <xpath expr="//sheet/notebook" position="inside">
                    <page string="机台部件">
                        <field name="equipment_parts_ids"/>
                    </page>
                </xpath>
            </field>
        </record>
        <record id="tj_maintenance_workers_view_filter" model="ir.ui.view">
            <field name="name">tj_maintenance.workers.view.filter</field>
            <field name="model">tj_maintenance.workers</field>
            <field name="arch" type="xml">
                <search string="搜索视图">
                    <field name="teamname_ids"/>
                </search>
            </field>
        </record>
        <record id="tj_maintenance_request_view_kanban_inherit" model="ir.ui.view">
            <field name="name">maintenance.request.kanban</field>
            <field name="model">maintenance.request</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_request_view_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_kanban_content')]" position="replace">
                    <div class="o_kanban_record_body">
                        <span name="owner_worker_id" t-if="record.owner_worker_id.raw_value">申请者:
                            <field name="owner_worker_id"/>
                            <br/>
                        </span>
                        <span name="technician_worker_id" t-if="record.technician_worker_id.raw_value">指派人:
                            <field name="technician_worker_id"/>
                            <br/>
                        </span>
                        <span class="oe_grey" t-if="record.equipment_id.raw_value">机台:
                            <field name="equipment_id"/>
                            <br/>
                        </span>
                    </div>
                    <div class="o_kanban_record_bottom">
                        <div class="oe_kanban_bottom_left">
                            <field name="priority" widget="priority"/>
                            <t t-if="record.message_needaction_counter.raw_value">
                                <span class='oe_kanban_mail_new' title='Unread Messages'>
                                    <i class='fa fa-comments'/>
                                    <t t-raw="record.message_needaction_counter.raw_value"/>
                                </span>
                            </t>
                            <div class="o_kanban_inline_block ml4 mr4">
                                <field name="activity_ids" widget="kanban_activity"/>
                            </div>
                        </div>
                        <div class="oe_kanban_bottom_right">
                            <field name="kanban_state" widget="state_selection"/>
                            <!--<img t-att-src="kanban_image('res.users', 'image_small', record.technician_user_id.raw_value)"-->
                            <!--t-att-title="record.technician_user_id.value" width="24" height="24"-->
                            <!--class="oe_kanban_avatar pull-right"/>-->
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
        <record id="tj_equipment_view_kanban" model="ir.ui.view">
            <field name="name">equipment.kanban</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_view_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='owner_user_id']" position="replace">
                    <field name="kb_num"/>
                    <field name="kb_employ_num"/>
                    <field name="kb_running_state"/>
                    <field name="kb_production_type"/>
                    <field name="kb_work_date"/>
                    <field name="kb_device_utilization"/>
                    <field name="kb_production_qty"/>
                </xpath>
                <xpath expr="//div[hasclass('o_kanban_record_body')]" position="replace">
                    <div class="o_kanban_record_body">
                        <div class="col-xs-6 o_kanban_primary_left">
                            <div class="row">
                                <div class="col-xs-7">
                                    <small>机台号:</small>
                                </div>
                                <div class="col-xs-5">
                                    <t t-esc="record.kb_num.value"/>
                                </div>
                                <div class="col-xs-7">
                                    <small>员工号:</small>
                                </div>
                                <div class="col-xs-5">
                                    <t t-esc="record.kb_employ_num.value"/>
                                </div>
                                <div class="col-xs-7">
                                    <small>运行状态:</small>
                                </div>
                                <div class="col-xs-5">
                                    <t t-esc="record.kb_running_state.value"/>
                                </div>
                                <div class="col-xs-7">
                                    <small>生产类型:</small>
                                </div>
                                <div class="col-xs-5">
                                    <t t-esc="record.kb_production_type.value"/>
                                </div>
                                <div class="col-xs-7">
                                    <small>工作时间:</small>
                                </div>
                                <div class="col-xs-5">
                                    <t t-esc="record.kb_work_date.value"/>
                                </div>
                                <div class="col-xs-7">
                                    <small>利用率:</small>
                                </div>
                                <div class="col-xs-5">
                                    <t t-esc="record.kb_device_utilization.value"/>
                                </div>
                                <div class="col-xs-7">
                                    <small>产量:</small>
                                </div>
                                <div class="col-xs-5">
                                    <t t-esc="record.kb_production_qty.value"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="tj_equipment_parts_tree" model="ir.ui.view">
