        <!--自定义新视图（先声明视图，后声明动作。）-->
        <record id="tj_maintenance_request_form" model="ir.ui.view">
            <field name="name">tj_maintenance_request_form</field>
            <field name="model">maintenance.request</field>
            <!--<field name="inherit_id" ref="maintenance.hr_equipment_request_view_form"/>-->
            <field name="arch" type="xml">
                <form string="维护请求">
                    <header>
                        <button string="取消" name="archive_equipment_request" type="object"
                                attrs="{'invisible': [('archive', '=', True)]}"/>
                        <button string="重开请求" name="reset_equipment_request" type="object"
                                attrs="{'invisible': [('archive', '=', False)]}"/>
                        <button string="提交" name="archive_submit_request" type="object"
                                attrs="{'invisible': ['|',('archive', '=', True),('stage_id', '!=', 1)]}"/>
                        <button string="完成" name="reset_done_request" type="object"
                                attrs="{'invisible': ['|',('archive', '=', True),('stage_id', '!=', 2)]}"/>
                        <field name="stage_id" widget="statusbar" clickable="true"
                               attrs="{'invisible': [('archive', '=', True)]}"/>
                    </header>
                    <sheet>
                        <div attrs="{'invisible': [('archive', '=', False)]}">
                            <span class="label label-warning pull-right">取消</span>
                        </div>
                        <div class="oe_right">
                            <field name="kanban_state" class="oe_inline" widget="state_selection"/>
                        </div>
                        <group>
                            <group>
                                <field name="equipment_id" string="机台名称" attrs="{'readonly': [('stage_id', '!=', 1)]}"/>
                                <field name="equipment_model" string="机台型号"
                                       attrs="{'readonly':[('stage_id', '!=', 1)]}"/>
                                <field name="equipment_serial" string="机台序列"
                                       attrs="{'readonly': [('stage_id', '!=', 1)]}"/>
                                <field name="equipment_parts_ids" widget="many2many_tags"
                                       options="{'color_field': 'color'}"
                                       attrs="{'readonly': [('stage_id', '!=', 1)]}"/>
                                <field name="archive" invisible="1"/>
                            </group>
                            <group>
                            </group>
                        </group>
                        <div>
                            <h1>申请方:</h1>
                        </div>
                        <group>
                            <group>
                                <field name="owner_worker_id" string="申请人"
                                       attrs="{'readonly': [('stage_id', '!=', 1)]}"/>
                                <field name="owner_worker_num" string="申请人工号"/>
                                <field name="owner_worker_team" string="申请人工种"/>
                            </group>
                            <group>
                                <field name="maintenance_team_id" options="{'no_create': True, 'no_open': True}"
                                       string="指派工种" attrs="{'readonly': [('stage_id', '!=', 1)]}"/>
                                <field name="technician_worker_id" string="指派人"
                                       attrs="{'readonly': [('stage_id', '!=', 1)]}"/>
                                <field name="create_date" attrs="{'readonly': [('stage_id', '!=', 1)]}"/>
                                <field name="priority" widget="priority" attrs="{'readonly': [('stage_id', '!=', 1)]}"/>
                            </group>
                        </group>
                        <field name='description' placeholder="Internal Note ......."
                               attrs="{'readonly': [('stage_id', '!=', 1)]}"/>
                        <div attrs="{'invisible': [('stage_id', '=', 1)]}">
                            <div>
                                <h1>维修方:</h1>
                            </div>
                            <group>
                                <group>
                                    <field name="receiving_worker_id" string="接单人"/>
                                    <field name="receiving_worker_num" string="接单人工号"/>
                                    <field name="receiving_worker_team" string="接单人工种" readonly="False"/>
                                </group>
                                <group>
                                    <field name="receiving_date" string="接收时间"/>
                                    <field name="write_date" string="填表时间" readonly="1"/>
                                    <field name="fault_cause_analysis" string="故障原因分析"/>
                                </group>
                                <label for="fault_type_ids" string="故障类型:"/>
                                <field name="fault_type_ids" widget="many2many_tags"
                                       options="{'color_field': 'color'}"/>
                                <b>
                                    <label for="handelway_ids" string="处理方式:"/>
                                </b>
                                <field name="handelway_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </group>
                            <field name='receiving_description' placeholder="Internal Note ......."/>
                        </div>

                        <notebook colspan="4">
                            <page string="消耗件">
                                <field name="parts_consume_ids"/>
                            </page>
                            <page string="附件">
                                <button name="action_get_attachment_view"
                                        class="oe_stat_button"
                                        icon="fa-book"
                                        string="附件"
                                        type="object">
                                </button>
                                <field name="attachment_ids" widget="one2many" options="{'not_delete': True}">
                                    <kanban quick_create="false" create="0" delete="0">
                                        <field name="id"/>
                                        <field name="mimetype"/>
                                        <field name="type"/>
                                        <field name="datas_fname"/>
                                        <field name="name"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div class="oe_kanban_global_click">
                                                    <div class="oe_kanban_vignette">
                                                        <div class="oe_attachment">
                                                            <div class="oe_name">
                                                                <field name="name"/>
                                                            </div>
                                                            <div t-if="record.type.raw_value == 'binary'">
                                                                <a t-attf-href="/web/content/#{record.id.raw_value}?download=1">
                                                                    <t t-set="webimage"
                                                                       t-value="new RegExp('image.*(gif|jpeg|jpg|png)').test(record.mimetype.value)"/>
                                                                    <div t-if="!webimage" class="o_image"
                                                                         t-att-data-mimetype="record.mimetype.value"/>
                                                                    <div t-if="webimage" class="o_attachment_image">
                                                                        <img t-attf-src="/web/image/#{record.id.raw_value}?download=1"/>
                                                                    </div>
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

